<!DOCTYPE html>
<html lang="en">
<!-- include head -->
<%- include('../partials/head') %>

<body>
    <!-- include header -->
    <%- include('../partials/header') %>

    <main>
        <p class="rutahome"><a href="/">Home</a> /Carrito</p>
        
        <div style="overflow-x:auto;">
        <table><!--Tabla Cart desde 361px-->
          
            <tr>
              <th scope="col" colspan="2">PRODUCTO</th>
              <th scope="col">PRECIO</th>
              <th scope="col" colspan="3">CANTIDAD</th>
              <th scope="col"colspan="2">TOTAL</th>
            </tr>
          
          
            <tr>
              <td id="row-img"><img src="/images/productos/accesorios/dispensers/comedero-azimut.png" alt="dispenser-azimut"/></td>
              <td>Dispenser Azimut 1,5 lts.</td>
              <td>$3.500</td>
              <td><i class="fa-solid fa-minus cant-icono"></td>
              <td><p id="descripcion">1</p></td>
              <td><i class="fa-solid fa-plus cant-icono"></i></td>
              <td>$3.500</td>
              <td><i class="fa-regular fa-trash-can"></i></td>
            </tr>
          

        </table><!--Fin Tabla Cart desde 361px-->
      </div>

        <div class="cart"> <!--Main -Cart-Sección completa Mobile -->
            <div class="detalle-producto"> <!--Producto agregado al cart -->
                <p id="nombre-producto">Dispenser Azimut 1,5 lts.<i class="fa-regular fa-trash-can"></i></p>               
                    <div class="cant-producto"><!--Producto mas cant seleccionada -->
                      <img src="/images/productos/accesorios/dispensers/comedero-azimut.png" alt="dispenser-azimut"/>                 
                        <div><!--Seccion para agregar o restar productos -->
                          <i class="fa-solid fa-plus cant-icono"></i>
                          <p id="descripcion">1</p>
                          <i class="fa-solid fa-minus cant-icono"></i>
                        </div>
                    </div>      
            <p id="precio-producto">$3.500</p>
             </div>

            <div class="resumen-compra">      
                <div class="descuento">        
                  <input type="text" name="cod-descuento" id="cod-descuento" placeholder="código de descuento"/>
                  <a href="#"><input type="button" name="aplicar-cod" id="aplicar-cod" value="APLICAR"/></a> 
                </div>
                <div class="detalle-compra">
                  <p id="">SUBTOTAL (sin envío): <span>$ 3.500</span></p>
                  <p id="">DESCUENTO: <span>$ 0.00</span></p>                  
                  <p id="">TOTAL (sin envío): <span>$ 3.500</span></p>
                </div>
                <div class="center"><!--Botones Inicio compra-->
                  <a href="/cart/checkout"><input
                    type="button"
                    name="inicio-compra"
                    id="inicio-compra"
                    value="INICIAR COMPRA"           
                  /></a>      
                
                  <a href=""><input
                    type="button"
                    name="seguir-compra"
                    id="seguir-compra" 
                    value="SEGUIR COMPRANDO"
                  /></a>
                </div>
        </div><!--Fin Cart-Sección completa -->

    </main>

 <!-- include footer -->
 <%- include('../partials/footer') %>

  </body>

</html>
