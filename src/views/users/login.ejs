<!DOCTYPE html>
<html lang="en">
<!-- include head -->
<%- include("../partials/head.ejs") %>

<body>
    <!-- include header -->
    <%- include('../partials/header') %>

    <main class="mainlogin">
        <p class="rutahome"><a href="/">Home</a> / login</p>
        <form action="/login" method="POST">
            <label for="email">Email</label> 
            <input type="email" name="email" id="email">
            <br>
            <br>
            <label for="contraseña">Contraseña</label> 
            <input type="password" name="contraseña" id="contraseña">
            <p class="olvidasteclave"><a href="#">¿Olvidaste tu contraseña?</a></p>
            <br>
            <br>
            <button type="submit"><a href="/user/profile">INICIAR SESIÓN</a></button>
            <br>
            <div class="opcionrecordarme">
                <label for="recordarme">Recordarme</label>
                <input type="checkbox" name="recordarme">
            </div>
            <br>
            <p class="notenescuenta">¿No tenés cuenta? <br>
            <a href="/user/register"><strong>Crear cuenta</strong></a></p>
        </form>
    </main>

    <!-- include footer -->
    <%- include('../partials/footer') %>
</body>

</html>