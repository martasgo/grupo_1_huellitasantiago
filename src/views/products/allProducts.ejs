<!DOCTYPE html>
<html lang="en">
<!-- include head -->
<%- include('../partials/head') %>

<script src="/js/allProducts.js"></script>
    <body>
        <!-- include header -->
        <%- include('../partials/header') %>
            <main>
                <p class="rutahome">
                    <a href="/user/profile">Perfil</a> / Listado de productos /
                </p>
                <section>

                    <% allProducts.forEach(product=> { %>
                        <div class="product">
                            <a href="/product/detalle/<%=product.id%>">
                                <%= product.nombre %>
                            </a>
                            <img src="/images/productos/<%= product.imagen %>" height="50px" width="50px">
                        </div>
                        <% }); %>

                            <!-- PaginaciÃ³n -->
                            <%- include('../partials/paginacion') %>

                </section>

                <!-- include marcas -->
                <%- include('../partials/marcas') %>
            </main>
            <!-- include footer -->
            <%- include('../partials/footer') %>

    </body>

</html>