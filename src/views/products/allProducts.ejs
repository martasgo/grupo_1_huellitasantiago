<!DOCTYPE html>
<html lang="en">
<!-- include head -->
<%- include('../partials/head') %>

<script src="/js/allProducts.js"></script>
    <body>
        <!-- include header -->
        <%- include('../partials/header') %>
            <main>
                <p class="rutahome">
                    <a href="/users/<%= user.id %>/profile">Perfil</a> / Listado de productos /
                </p>
                <section>

                    <% allProducts.forEach(product=> { %>
                        <div class="<%= (product.activo === 1) ? 'product' : 'product-nonActive' %>">
                            <a href="/products/<%=product.id%>/details">
                                <%= product.nombre %>
                            </a>
                            <div class="actions">
                                 <a href="/products/<%= product.id %>/edition"><i class="fa-solid fa-pen-to-square iconos"></i></a>
                                 <% if(product.activo === 1) {%>
                                    <a href="/products/<%= product.id %>/deletion"><i class="fa-solid fa-trash iconos"></i></a>
                                 <% } %>   
                                <img src="/images/productos/<%= product.imagen %>" height="50px" width="50px">
                            </div>
                            
                        </div>
                        <% }); %>

                            <!-- PaginaciÃ³n -->
                            <%- include('../partials/paginacion') %>

                </section>

                <!-- include marcas -->
                <%- include('../partials/marcas') %>
            </main>
            <!-- include footer -->
            <%- include('../partials/footer') %>

    </body>

</html>