<!DOCTYPE html>
<html lang="en">
  <!-- include head -->
<%- include('../partials/head') %>
  <body>
    <!-- include header -->
    <%- include('../partials/header') %>
    <main>
        <p class="rutahome"><a href="/">Home</a> / <a href="/mascotas">Mascotas</a> / 
      
        <section class="ficha-producto">
            <div id="img-precio">
                <section id="imgProducto">
                    <img class="imgPrincipal" src="/images/productos/<%= producto[0].imagen %>" />
                    <div class="fotos">
                        <img src="/images/productos/<%= producto[0].imagen %>" />
                        <img src="/images/productos/<%= producto[0].imagen %>" />
                        <img src="/images/productos/<%= producto[0].imagen %>" />
                    </div>
                </section>
                <section id="carritoProducto">
                    <h3 class="margin-top"><%= producto[0].nombreProducto %> </h3>
                    <% if (producto[0].descuento != 0) {
                        precioFinal = (producto[0].precio - ((producto[0].precio * (producto[0].descuento/100)))) %>
                        <div class="preciosOfertas">
                            <span id="prodOff"><%= producto[0].descuento %>% OFF</span>
                            <p class="precioAnt" id="">$<%= toThousand(producto[0].precio) %></p>
                            <p class="precioAhora" id="">$<%= toThousand(precioFinal) %> </p> 
                        </div>
                    <% } else {%>
                        <p class="precioAhora" id="">$<%= toThousand(producto[0].precio) %> </p>
                    <% } %>
                    <div id="comprar">
                        <div> <button class="cantidad-icono">+</button> <input type="text" value="1" class="cantidad-producto"> <button class="cantidad-icono">-</button></div>
                        <div><input type="button" class="addtocart" value="Agregar al carrito" />  </div>
                    </div>
                    <p><i class="fa-solid fa-credit-card"></i> <a href="/envios">Medios de pago</a></p>
					
                <div class="elementos-form-100">
                    <div id="form-buttons">  
                        <a href="/product/editar/<%= producto[0].id %>" class=""><button type="button" class="">EDITAR</button></a>
                        <a href="/product/delete/<%= producto[0].id %>" class=""><button type="button" class="">ELIMINAR</button></a>
                    </div>
                </div>        
                </section>
            </div>
            <section id="descripcionProd">
               
                <h3 class="margin-top"> Descripción </h3>
                <div class="detalleProducto">
                    <p><span class="textNegrita">Marca:</span> <%= producto[0].marca %></p>
                    <% edad = producto[0].edadMascota.charAt(0).toUpperCase() + producto[0].edadMascota.slice(1); 
                    tamanio = producto[0].tamanioMascota.charAt(0).toUpperCase() + producto[0].tamanioMascota.slice(1);  %>
                    <p><span class="textNegrita">Edad mascota:</span> <%= edad %> </p>
                    <p><span class="textNegrita">Tamaño mascota:</span> <%= tamanio %> </p>
                    <p class="textDescripcion"><%= producto[0].descripcion %></p>
                </div>
                
    
            </section>
        </section>

        <p class="tituloProductosDestacados">PRODUCTOS DESTACADOS</p>
        <section class="listadoArticulos">
            <% for (i=0; i< productsDestacado.length; i++){ %>
                <article>
                    <a href="/product/detalle/<%= productsDestacado[i].id %>"><img src="/images/productos/<%= productsDestacado[i].imagen %>" alt="Cinturon seguridad"></a>
                    <div class="detalle">
                        <p id=""><%= productsDestacado[i].nombreProducto %></p>
                            <% if (productsDestacado[i].descuento != 0) {
                                precioFinal = (productsDestacado[i].precio + ((productsDestacado[i].precio * (productsDestacado[i].descuento/100)))) %>
                                <div class="preciosOfertas">
                                    <span id="prodOff"><%= productsDestacado[i].descuento %>% OFF</span>
                                    <p class="precioAnt" id="">$<%= toThousand(productsDestacado[i].precio) %></p>
                                    <p class="precioAhora" id="">$<%= toThousand(precioFinal) %> </p> 
                                </div>
                            <% } else {%>
                                <p class="precioAhora" id="">$<%= toThousand(productsDestacado[i].precio) %> </p>
                            <% } %>
                        <a><input type="button" value="Comprar" id="btn-comprar"/></a>
                    </div>
                </article>    
            <%  } %>
        </section>
        <div class="verproductos">
            <a href="#"> <input type="button" name="productos" id="productos" value="Mostrar más productos"/> </a>
        </div>
       <!-- include marcas -->
       <%- include('../partials/marcas') %>
    </main>

    <!-- include footer -->
    <%- include('../partials/footer') %>
</body>

</html>